<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="materialtest.example.vishal.materialdesign.activity.ThirdActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bt_next1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Background"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="14dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/j_detail"
                    android:textSize="@dimen/size_of_header"
                    android:textStyle="bold|normal" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_horizontal_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ttv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/app_date" />
                    <TextView
                        android:id="@+id/dateoa"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/shape"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp" />
                    <TextView
                        android:id="@+id/mtv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/office_name" />
                    <EditText
                        android:id="@+id/etm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape"
                        android:paddingBottom="8dp"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:paddingTop="8dp" />
                    <TextView
                        android:id="@+id/ltv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/j_date" />
                    <TextView
                        android:id="@+id/dateoj"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/shape"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp" />
                    <TextView
                        android:id="@+id/dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/i_desg" />
                    <EditText
                        android:id="@+id/etk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape"
                        android:paddingBottom="8dp"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:paddingTop="8dp" />
                    <TextView
                        android:id="@+id/htv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/m_rect" />
                    <EditText
                        android:id="@+id/eth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape"
                        android:paddingBottom="8dp"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:paddingTop="8dp"/>
                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/e_type" />
                    <EditText
                        android:id="@+id/eth1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape"
                        android:paddingBottom="8dp"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:paddingTop="8dp" />
                     </LinearLayout>
                <TextView
                    android:id="@+id/od"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Background"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="14dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/s_detail"
                    android:textSize="@dimen/size_of_header"
                    android:textStyle="bold|normal" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_horizontal_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/b_pay" />
                    <EditText
                        android:id="@+id/etb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape"
                        android:paddingBottom="8dp"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:paddingTop="8dp"/>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>
    <Button
        android:id="@+id/bt_next1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
