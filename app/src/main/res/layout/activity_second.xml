<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="materialtest.example.vishal.materialdesign.activity.SecondActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <ScrollView
            android:id="@+id/contentScroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bt_next1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Background"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="14dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/head"
                    android:textSize="@dimen/size_of_header"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/tv_preadd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:paddingTop="5dp"
                    android:text="@string/presentadd" />

                <EditText
                    android:id="@+id/et_preadd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:paddingTop="5dp"
                    android:text="@string/state" />

                <EditText
                    android:id="@+id/et_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/tv_dis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:paddingTop="5dp"
                    android:text="@string/Dis" />

                <EditText
                    android:id="@+id/et_dis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/tv_block1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:paddingTop="5dp"
                    android:text="@string/block" />

                <EditText
                    android:id="@+id/et_block1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/tv_pan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:paddingTop="5dp"
                    android:text="@string/pan" />

                <EditText
                    android:id="@+id/et_pan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:paddingTop="8dp"/>

                <TextView
                    android:id="@+id/tv_pcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:paddingTop="5dp"
                    android:text="@string/pcode" />

                <EditText
                    android:id="@+id/et_pcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape"
                    android:maxLength="6"
                    android:inputType="number"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/tv_pno1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:paddingTop="5dp"
                    android:text="@string/pno" />

                <EditText
                    android:id="@+id/et_pno1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape"
                    android:inputType="number"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:paddingTop="8dp"
                    android:maxLength="10"/>

                <TextView
                    android:id="@+id/tv_mno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:paddingTop="5dp"
                    android:text="@string/mno" />

                <EditText
                    android:id="@+id/et_mno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape"
                    android:inputType="number"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:paddingTop="8dp"
                    android:maxLength="10"/>

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:paddingTop="5dp"
                    android:text="@string/email" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/tv_secondhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Background"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="16dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/peradhead"
                    android:textSize="@dimen/size_of_header"
                    android:textStyle="bold|normal" />

                <TextView
                    android:id="@+id/tv_peradd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:paddingTop="5dp"
                    android:text="@string/peradd" />

                <EditText
                    android:id="@+id/et_peradd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="8dp"/>

                <TextView
                    android:id="@+id/tv_pstate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:paddingTop="5dp"
                    android:text="@string/state" />

                <EditText
                    android:id="@+id/et_pstate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/tv_pdis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:paddingTop="5dp"
                    android:text="@string/Dis" />

                <EditText
                    android:id="@+id/et_pdis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/tv_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:paddingTop="5dp"
                    android:text="@string/block" />

                <EditText
                    android:id="@+id/et_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/tv_ppan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:paddingTop="5dp"
                    android:text="@string/pan" />

                <EditText
                    android:id="@+id/et_ppan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:paddingTop="8dp"/>

                <TextView
                    android:id="@+id/tv_ppcod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:paddingTop="5dp"
                    android:text="@string/pcode" />

                <EditText
                    android:id="@+id/et_ppcod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape"
                    android:inputType="number"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:paddingTop="8dp"
                    android:maxLength="6"/>

                <TextView
                    android:id="@+id/tv_pno2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:paddingTop="5dp"
                    android:text="@string/pno" />

                <EditText
                    android:id="@+id/et_pno2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape"
                    android:inputType="number"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:paddingTop="8dp"
                    android:maxLength="10"/>

            </LinearLayout>


        </ScrollView>


        <Button
            android:id="@+id/bt_next1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@android:color/white" />


    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
